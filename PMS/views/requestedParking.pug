extends layout 

block content 
  nav(class="nav")
    div(class="nav_container")
      div(class= "nav_logo")
        img(src="/images/UEALogo.png", alt="", id="logo")
      ul(class="nav_list")
        li 
         a(class = "nav_option", href='/main') Home
        li 
         a(class = "nav_option", href='/bookings') Bookings
        li 
         a(class = "nav_option", href='/account') Account
        li  
         a(class = "nav_option", href='/help') help
  main
    div(class="requestPageContainer")
      h1.center Thank you for your request, its being processed with an admin now.
      br
      h1.center Please click the button below to pay for your parking.
      br
      br
      br
      form(action="/payment", method="GET")
        input(type="submit", value="Pay For Parking", id="paymentPageButton")
      form(action='/main/logout', METHOD = 'POST', id = "logout_button")
        input(type="submit", name="logout", value = "Logout", id = "logout_input")
