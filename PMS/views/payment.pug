extends layout

block content
  nav(class="nav")
    div(class="nav_container")
      div(class= "nav_logo")
        img(src="/images/UEALogo.png", alt="", id="logo")
      ul(class="nav_list")
        li 
         a(class = "nav_option", href='/main') Home
        li 
         a(class = "nav_option", href='/bookings') Bookings
        li 
         a(class = "nav_option", href='/account') Account
        li  
         a(class = "nav_option", href='/help') Help
  main
    h1.center Parking Payment
    br
    h2.center Please enter your card details:

    div(class="payment-details")
      form(action='/main/processPayment', method='POST')
        label(for="name") Cardholder Full Name: 
        input(type="text", id="name", name="name", placeholder="John Smith", required)
        br
        br
        label(for="cardNumber") Card Number:        
        input(type="text", id="cardNumber", name="cardNumber", placeholder="XXXX-XXXX-XXXX-XXXX", required)
        br
        br
        label(for="expiryDate") Expiry Date:        
        input(type="text", id="expiryDate", name="expiryDate", placeholder="MM/YY", required)
        br
        br
        label(for="cvv") CVV:       
        input(type="text", id="cvv", name="cvv", placeholder="xxx", required)
        br
        br
        input(type="submit", value="Pay Now")

    form(action='/main/logout', method='POST', id="logout_button")
      input(type="submit", name="logout", value="Logout", id="logout_input")
