extends layout 

block content 
  nav(class="nav")
    div(class="nav_container")
      div(class= "nav_logo")
        img(src="/images/UEALogo.png", alt="", id="logo")
      ul(class="nav_list")
        li 
         a(class = "nav_option", href='mainAdmin') Home
        li 
         a(class = "nav_option", href='bookings') Account
        li  
         a(class = "nav_option", href='bookings') Help
  main
  section(class = "main_content")
    div(class ="requests")
      h2 Manage requests
      ul 
       each request in userRequests
            li #{request.destination} #{request.department}  #{request.arriveDate}  #{request.departDate}
            form(action='/mainAdmin/approveRequest', method='POST')
             input(type="hidden", name ="id", value = request._id)
             button(type = "submit") approve
             
            form(action='/mainAdmin/rejectRequest', method='POST')
             input(type="hidden", name ="id", value = request._id)
             button(type = "submit") Reject
       else
        li THERE ARE NO VALUES
    div(class = "carparks")
      h2 Car park status
      button(onclick="showNewParkingDialog()") Create new parking lot
      dialog(id = "newParking-dialog")
          h2 Create new parking lot 
          form(action='/mainAdmin', method= 'POST') 
            label(for="newLotName") Name
            input(type="text", name ="newLotName")

            label(for="newLotMaxCapacity") Max Capacity
            input(type="text", name="newLotMaxCapacity")

            input(type="submit", value = "Create") 
            button(onclick="closeNewParkingDialog()", type ="button") Cancel
            
      ul
       each carpark in carparks
         li Name: #{carpark._id} #{carpark.name}  Capacity: #{carpark.max_capacity} Avaiable: #{carpark.available} Occupied: #{carpark.occupied} Reserved: #{carpark.reserved}
           form(action='/mainAdmin/deleteLot', method='POST')
             input(type="hidden", name ="id", value = carpark._id)
             button(type = "submit") DELETE

         button Block space 
         
      script(src="/javascripts/adminClient.js")