extends layout

block content
  section(id = "registerPage")
   img(src="/images/UEALogo.png", alt="logoImg" id = "logo")
  
   div(id = "content")
     form(action='/register', method= 'POST')
        h1="SignUp to PMS!"
        label(for='username')
        input#username(type='text' name='username' placeholder='Username' required='')
        br
        label(for='password')
        input#password(type='password' name='password' placeholder='Password' required='')
        br
        label(for='email')
        input#email(type='text' name='email' placeholder='Email' required='')
        br
        label(for='phoneNumber')
        input#phoneNumber(type='text' name='phoneNumber' placeholder='Phone Number' required='')
        br
        input(type='submit' value='Sign Up')
        a(href='/') Login Page
        if errorMessage
          p.error= errorMessage