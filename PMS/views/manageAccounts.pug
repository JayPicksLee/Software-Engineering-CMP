extends layout 

block content 
  nav(class="nav")
    div(class="nav_container")
      div(class= "nav_logo")
        img(src="/images/UEALogo.png", alt="", id="logo")
      ul(class="nav_list")
        li 
         a(class = "nav_option", href='mainAdmin') Home
        li 
         a(class = "nav_option", href='account') Account
        li  
         a(class = "nav_option", href='help') Help

  main
   section(class = "manage_account_content")
     div(class = "manage_accounts_list")
      h2 User Accounts
      ul(style="list-style-type: none; padding: 0; display: grid; grid-template-columns: repeat(2, 1fr); grid-gap: 10px;")
       each user in users
        li(style="border: 1px solid #ccc; padding: 10px;")
          strong ID: 
          | #{user._id}
          br
          strong Username: 
          | #{user.username}
          br
          strong Email: 
          | #{user.email}
          br
          | Phone Number: #{user.phoneNumber}
          br
          br
          form(action='/manageAccounts/deleteUserAccount', method='POST')
            input(type="hidden", name="userId", value=user._id)
            button(type='submit') Delete Account